<p id="notice"><%= notice %></p>

<h1>Listing Komas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @komas.each do |koma| %>
      <tr>
        <td><%= link_to 'Show', koma %></td>
        <td><%= link_to 'Edit', edit_koma_path(koma) %></td>
        <td><%= link_to 'Destroy', koma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Koma', new_koma_path %>
