<p id="notice"><%= notice %></p>

<% content_for :stylesheet do %>
  <!-- Load Roboto font -->
  <link href='//fonts.googleapis.com/css?family=Roboto:400,300,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/stylesheets/show.css" />
<% end %>
<% content_for :javascript do %>
  <!-- Include javascript -->
  <script src="/javascripts/show.js"></script>
<% end %>

<div id="yonkoma">
  <p id="title"><%= @title %></p>
  <% @komas.each do |koma|%>
    <%= content_tag(:div, class: "koma", 'data-toggle':"popover", title:"元の絵の作者", 'data-content':"<a href="+ koma["creator_link"] +">"+ koma["creator"] + "</a>" ) do %>

      <% koma["serihu"].each do |serihu| %>
        <%= content_tag(:span, serihu["text"], id:"serihu", style: serihu["position"]) %>
      <% end %>
      
      <%= image_tag(koma["url"], size: koma["size"],id:"gazou",  style: koma["position"],:alt => "イラスト画像") %>
      
      <%= image_tag("hukidashi.png", id:"hukidashi",size: koma["hukidashi"]["size"],  style: koma["hukidashi"]["position"],:alt => "吹き出しの画像") %>

    <% end %>

  <% end %>

  <div id="last"></div>

</div>
